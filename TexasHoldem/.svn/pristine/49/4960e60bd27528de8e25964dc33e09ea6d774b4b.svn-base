	private showScore(score: number, label: eui.Label)
	{
		let str: string = StringConstant.empty;
		if (score >= 0)
		{
			label.textColor = 0x00ff00;
			str += "+"
			str += score.toString() + "分";
		}
		else
		{
			label.textColor = 0xff0000;
			str += score.toString() + "分";
		}
		label.text = str;
	}
